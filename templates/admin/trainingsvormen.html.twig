{% extends 'base.html.twig' %}

{% block title %}Hello InstructeurController!{% endblock %}

{% block body %}

    <table class="table table-success table-striped border-4 border-top border-dark">

        <tbody>
        {% for training in trainings %}
            <tr>
                <td>{{ training.name }}</td>
                <td>{{ training.duration }}</td>
                <td> {{ training.description }}</td>
                <td> <button class="btn btn-outline-dark"><a class="text-decoration-none" href="{{ path('adminTrainingUpdate', {id: training.id}) }}"> <i class="bi bi-pencil-square"></i></a></button></td>
                <td> <button class="btn btn-outline-danger"><a class="text-decoration-none" href="{{ path('adminTrainingDelete', {id: training.id}) }}"><i class="bi bi-trash3"></i></a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button class="btn btn-success mt-3 mb-3" ><a class="text-decoration-none text-light" href="{{ path('adminTrainingInsert') }}">Toevoegen</a></button>
{% endblock %}