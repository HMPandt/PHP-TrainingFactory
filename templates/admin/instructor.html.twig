                <td> <button class="btn btn-outline-danger"><a class="text-decoration-none" href="{{ path('adminInstructorDelete', {id: user.id}) }}"><i class="bi bi-trash3"></i></a></button></td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
    <button class="btn btn-success mt-3 mb-3" ><a class="text-decoration-none text-light" href="{{ path('adminInstructorInsert') }}">Toevoegen</a></button>
{% endblock %}