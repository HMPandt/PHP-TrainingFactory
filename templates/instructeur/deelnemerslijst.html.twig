{% extends 'base.html.twig' %}

{% block title %}Hello InstructeurController!{% endblock %}

{% block body %}
    <button class="btn btn-success mt-3 mb-3" ><a class="text-decoration-none text-light" href="{{ path('lestable') }}">Ga terug</a> </button>
    <table class="table table-dark table-striped border-4 border-top border-dark">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
            </tr>
        </thead>
        <tbody>
        {% for registration in lesson.registrations %}
            <tr>
                <td>{{ registration.member.firstname }}</td>
                <td>{{ registration.member.lastname }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}