{% extends 'base.html.twig' %}

{% block title %}Hello InstructeurController!{% endblock %}

{% block body %}
    <table class="table table-success table-striped border-4 border-top border-dark">

        <tbody>
        {% for registration in app.user.registrations %}
            <tr>
                <td>{{ registration.lesson.training.name}}</td>
                <td>{{ registration.lesson.location}}</td>
                <td> <button class="btn btn-outline-danger"><a class="text-decoration-none" href="{{ path('delete', {id: registration.id}) }}"><i class="bi bi-trash3"></i></a></button></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('profile') }}">Back to Profile</a>

{% endblock %}
